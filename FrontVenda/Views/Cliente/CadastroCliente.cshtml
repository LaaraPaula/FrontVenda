@using FrontVenda.Models


@model FrontVenda.Models.Cliente

<body>
    @if (ViewBag.Alerta != string.Empty && ViewBag.Alerta != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.Alerta');
        </script>
    }
    @if(ViewData["Titulo"]!= null)
    {
        <h3> @ViewData["Titulo"]</h3>
    }
    else
    {
        <h3>Cadastro</h3>
    }
    @using (Html.BeginForm("CadastroClienteForm", "Cliente", FormMethod.Post))
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label" for="nomeCliente">Nome do Cliente</label>
                        @Html.TextBoxFor(model => model.nome, new { @class = "form-control",@required="required",@placeholder="Nome do Cliente" ,@value=Model.nome})
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="telefone">Telefone</label>
                        @Html.TextBoxFor(model => model.telefone, new { @class = "form-control" ,@required="required",@placeholder="XXXXXXX-XXXX" , @value=Model.telefone})
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="endereco">Endereço</label>
                        @Html.TextBoxFor(model => model.endereco, new { @class = "form-control",@required="required", @placeholder="Endereço",@value=Model.endereco})
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="cpf">CPF</label>
                        @Html.TextBoxFor(model => model.cpf, new { @class = "form-control",@required="required",  @placeholder="XXX.XXX.XXX-XX" , @value=Model.cpf})
                    </div>
                </div>
                @Html.HiddenFor(model => model.id , new{@value=Model.id})
                @Html.AntiForgeryToken()

                <div>
                    <input type="submit" value="Enviar" class="enviar btn btn-primary">
                    
                </div>
                <div id="aa">
                    <a class="voltar" asp-controller="Cliente" asp-action="ExibeCliente">Voltar</a>
                </div>
                
            </div>
        </div>
    }
    <script src="/js/controle.js"></script>
    <script>
        document.getElementById('cliente').classList.add('active'); // Adiciona classe

        document.getElementById('funcionario').classList.remove('active'); // Remove classe
        document.getElementById('fornecedor').classList.remove('active');
        document.getElementById('produto').classList.remove('active');
    </script>
</body>
