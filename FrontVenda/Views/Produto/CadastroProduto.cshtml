@using FrontVenda.Models


@model FrontVenda.Models.Produto
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Cadastro Produto</title>

    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
    @if (ViewBag.Alerta != string.Empty && ViewBag.Alerta != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.Alerta');
        </script>
    }
    <h3>Cadastro</h3>
    @using (Html.BeginForm("CadastroProdutoForm", "Produto", FormMethod.Post))
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label" for="nomeProduto">Nome do Produto</label>
                        @Html.TextBoxFor(model => model.nome, new { @class = "form-control" ,@placeholder="Nome do Produto" })
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="descricao">Descrição</label>
                        @Html.TextBoxFor(model => model.descricao, new { @class = "form-control" , @placeholder="Sobre o Produto.."})
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="precoUni">Preço Unitário:</label>
                        @Html.TextBoxFor(model => model.precoUnitario, new { @class = "form-control" ,@onkeyup="Formata(this.value)", @placeholder="0,00"})
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="qtdItens">Quantidade no Estoque:</label>
                        @Html.TextBoxFor(model => model.quantidadeEstoque, new { @class = "form-control" , @type="number",@min="1",@placeholder="0"})
                    </div>
                </div>
                @Html.HiddenFor(model => model.id)
                @Html.AntiForgeryToken()
                <input type="submit" value="Enviar" class="enviar">
            </div>
        </div>        
    }
    <script src="/js/controle.js"></script>
</body>
</html>